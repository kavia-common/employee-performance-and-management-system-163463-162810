# Example environment variables (do NOT commit real secrets)
API_TITLE=Employee System API
API_VERSION=v1

# Security
SECRET_KEY=change-me
JWT_SECRET_KEY=change-me-too
JWT_ACCESS_TOKEN_HOURS=4
JWT_REFRESH_TOKEN_DAYS=30

# Database (provided by employee_system_database container)
MYSQL_URL=127.0.0.1
MYSQL_USER=user
MYSQL_PASSWORD=pass
MYSQL_DB=employee_system
MYSQL_PORT=3306

# Optional: override full SQLAlchemy URL (otherwise built from MYSQL_* vars)
# DATABASE_URL=mysql+pymysql://user:pass@127.0.0.1:3306/employee_system

# CORS
CORS_ORIGINS=*
